{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "public/*": ["public/*"]
        },
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "include": [
        "resources/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "public",
        "dist"
    ]
}
